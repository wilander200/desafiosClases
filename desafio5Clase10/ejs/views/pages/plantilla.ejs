<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EJS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body class="bg-light">
  <div class="container">
    <div class="h-100 w-100">
        <h1 class="text-dark text-center my-4">VISTA DE PRODUCTOS</h1>
        <% if(productoTrue) { %>
        <div class="table w-75 mx-auto">
            <table class="table table-light table-striped">
                <tr>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Precio</th>
                    <th class="text-center">Foto</th>
                </tr>
                <% producto.forEach(function(productos) {%>
                <tr>
                    <td class="text-center"><%= productos.title%></td>
                    <td class="text-center"><%= productos.price%></td>
                    <td class="text-center"><img width="50" src=<%=productos.thumbnail%> alt="not found"></td>
                </tr>
                <%})%>
            </table>
        </div>
        <% }else{ %>
        <h3 class="alert alert-danger">No hay productos</h3>
        <% } %>
        <div class="d-flex w-75 justify-content-end">
        <a href="/" type="button" class="btn btn-outline-dark my-4">Cargar un nuevo producto</a>
        </div>
    </div>
</body>
</html>